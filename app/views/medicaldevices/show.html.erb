<div class= "search-box">
  <%= render 'layouts/search' %>
</div>


<p id="notice"><%= notice %></p>

  <div class ="container">
    <div class="row">
                          <div class= "col-md-4 col-sx-5">
                            <h3><strong>Device Image:</strong></h3> 
                              <div class="device-image">
                                <% if @medicaldevice.image? %>
                                    <%= image_tag @medicaldevice.image.url.to_s %>
                                    <% else %>
                                    <%= image_tag("default-image2.jpg", :alt => "default image") %>
                                    <% end %> 
                              </div>
                          </div>
                        

                    <div class= "col-md-8 col-sx-7">
                      <h3><strong>Device Information:</strong></h3> 
                        <p class="device-number">
                          <strong>PMN or PMA number:</strong>
                          <%= @medicaldevice.pmak_number %>
                        </p>      

                          
                        <h5 class="device-heading"><strong>Trade Name:</strong></h5> 
                        <p><h4><%= @medicaldevice.trade_name %></h4></p>
                                              
                        <h5 class="device-heading"><strong>Generic Name:</strong></h5>
                        <p><h4> <%= @medicaldevice.generic_name %> </h4></p>
                        
                    
                        <h5 class="device-heading"><strong>Manufacturer/Applicant:</strong></h5>
                        <p><h4><%= @medicaldevice.applicant %></h4></p>

                        <h5 class="device-heading"><strong>Description:</strong></h5>
                        <p><%= truncate(@medicaldevice.description, length: 240, separator: ' ') %></p>
                    </div>
      </div>

      <div class="row">
              <div class="col-md-8 col-sx-7 device-video">
                <p>
                    <Strong><h3> Watch How-To Video: </h3></Strong>
                    
                     <div class="">
                       
                       <% if @medicaldevice.videourls.any? %>
                                    
                              <%= render @medicaldevice.videourls.last %>
                       
                          <% else %>
                               <div class="default-video-image">
                                      <%= image_tag("default-video.png", :alt => "default video image") %>
                               </div>
                          <% end %> 
                          
                    </div>
                </p>
              </div>

              <div class="col-md-4 col-sx-5">
                <p>
                    <Strong><h4> View Similar Devices: </h4></Strong>
                </p>
              </div>
      </div>
              
              <div class="row">
                <div class="col-md-8 col-sx-7">

                  <p>
                    <Strong><h3> Device Reviews: </h3></Strong>
                  </p>
                  <ol>
                   <% @medicaldevice.device_reviews.each do |review| %>
                      <li>
                         <p>By: <%= review.user.username %> </p>
                         <p> <%= review.content %> </p> 
                        <% end %>
                      </li>
                  </ol>

                    <%= render partial: 'device_reviews/form' %>
                  </div>

              </div>
    <div class= "back-to-home">
        <%= link_to 'Back to Home', root_path, :class => "btn btn-success"  %>
    </div>

  </div> <!-- end container>

