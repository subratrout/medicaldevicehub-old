<%= form_for @medicaldevice, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :pmak_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pmak_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :applicant, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :applicant, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :generic_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :generic_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :trade_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :trade_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :product_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :product_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :advisory_committee, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :advisory_committee, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                medicaldevices_path, :class => 'btn' %>
  </div>
<% end %>
