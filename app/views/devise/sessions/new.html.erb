<div class="container">
  <div class="row">

		<div class="panel panel-default">
		  
		  <div class="panel-heading">
		    <div class="panel-title">
		      <h1>Sign in</h1>
		    </div>
		 </div>



		 <% if flash[:error] %>
                	<div class="error"><%= flash[:error] %></div>
            	<% end %>
            	<%= devise_error_messages! %>


            	<div id='facebook-container'>
            		<div class='facebook-link'>
              			<%= link_to image_tag('fb_signup.svg'), user_omniauth_authorize_path(:facebook), :class => 'facebook social' %>
            		</div>
            
            		<p>We'll never post anything to your <br> account without your permission.</p>
          		</div>

          		<div class ="or">
          			<p><strong> -Or-</strong> </p>
          		</div>

		  
		  <div class="panel-body">
		  		<div class="col-md-6">
				    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

				      <div class="form-group">
				        <%= f.label :username %>
				        <%= f.input_field :username, class: "form-control", :autofocus => true %>
				      </div>

				      <div class="form-group">
				        <%= f.label :password %>
				        <%= f.password_field :password, class: "form-control" %>
				      </div>

				      <div class="form-group">
				        <div class="checkbox">
				          <%= f.check_box :remember_me %>
				          <%= f.label :remember_me %>
				        </div>
				      </div>

				      <div class="form-group">
				        <%= f.submit "Sign in", class: "btn btn-primary" %>
				      </div>
				    <% end %>
				</div>
				
		  </div>
		  
		  <div class="panel-footer">
		    <%= render "devise/shared/links" %>
		  </div>
		</div>
  	</div>
</div>