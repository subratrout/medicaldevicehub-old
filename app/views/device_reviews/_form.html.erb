<p>
	<strong>Add a Review</strong>
 </p>

 <%= simple_form_for @device_review do |f| %>
  <%= f.hidden_field :medicaldevice_id %>
  <%= f.hidden_field :user_id %>
  <%= f.label :content, 'Text' %>:
  <%= f.text_field :content %><br />
  <div class="form-actions">
  	<%= f.submit "Create Device Review", class: "btn btn-primary" %>
  </div>
  <%= @device_review.errors.full_messages %>
<% end %>