<div class="rows">
	<div class="container">

			<% content_for :title do %>Contact<% end %>
					<h3>Contact Us</h3>
				<div class="form">
			 		<%= simple_form_for @contact do |form| %>
			 				<%= form.error_notification %>
			 				<%= form.input :name, autofocus: true %>
			 				<%= form.input :email %>
			 				<%= form.input :content, as: :text, :input_html => {:rows => 4} %>
			 				<%= form.button :submit, 'Submit', class: 'btn btn-primary' %>
			 		<% end %>
				</div>
	</div>
</div>